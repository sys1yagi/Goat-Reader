                                    a.btn.disabled#view_content_mode(style="padding-top:0px;padding-bottom:0px;")
                                        img(src="img/content.png")
                                    a.btn#view_list_mode(style="padding-top:0px;padding-bottom:0px;")
                                        img(src="img/list.png")
                div#item_list(style="overflow: scroll;border:1px solid #ccc;padding:10px;")
